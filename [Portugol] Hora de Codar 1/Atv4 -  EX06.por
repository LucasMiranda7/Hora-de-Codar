programa {
  funcao inicio() {
    //Triângulo

    //Variaveis do tipo real
    real base
    real altura
    real area

    //entrada
    escreva("Valor da base do Triângulo: ")
    leia(base)

    //entrada
    escreva("Valor da altura do Triângulo: ")
    leia(altura)

    //Calculo
    area = base * altura / 2

    //Valor total da área 
    escreva("O valor total da área do Triângulo é: " + area)
  }
}
